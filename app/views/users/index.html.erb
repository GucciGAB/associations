<div class="container mx-auto py-6">
  <h1 class="text-3xl font-bold mb-6">Users</h1>
  <div class="mb-4 flex space-x-3">
    <%= link_to 'New User', new_user_path, class: 'px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600' %>
  </div>
  <table class="w-full border border-gray-300 text-left">
    <thead class="bg-gray-800 text-white">
      <tr>
        <th class="px-4 py-2 border border-gray-300">Email</th>
        <th class="px-4 py-2 border border-gray-300">Profile</th>
        <th class="px-4 py-2 border border-gray-300">Gender</th>
        <th class="px-4 py-2 border border-gray-300">Bio</th>
        <th class="px-4 py-2 border border-gray-300">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="odd:bg-white even:bg-gray-100">
          <td class="px-4 py-2 border border-gray-300"><%= user.email %></td>
          <td class="px-4 py-2 border border-gray-300">
            <%= user.profile ? user.profile.name : "No profile" %>
          </td>
          <td class="px-4 py-2 border border-gray-300">
            <%= user.profile ? user.profile.gender : "No profile" %>
          </td>
          <td class="px-4 py-2 border border-gray-300">
            <%= user.profile ? user.profile.bio : "No profile" %>
          </td>
          <td class="px-4 py-2 border border-gray-300">
            <div class="flex space-x-2">
              <%= link_to 'Edit', edit_user_path(user), class: 'px-3 py-1 bg-yellow-400 text-black rounded hover:bg-yellow-500' %>
              <%= link_to 'Show', user_path(user), class: 'px-3 py-1 bg-blue-400 text-white rounded hover:bg-blue-500' %>
              <%= link_to 'Destroy', user_path(user), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
