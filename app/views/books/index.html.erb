<h1>Books</h1>
<div class="mb-3">
  <%= link_to 'New Book', new_book_path, class: 'btn btn-primary' %>
  <%= link_to 'Authors', authors_path, class: 'btn btn-secondary' %>
</div>

<table class="table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.content %></td>
        <td><%= book.author.name if book.author %></td>
        <td>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-sm btn-warning me-2' %>
          <%= link_to 'Show', book_path(book), class: 'btn btn-sm btn-info me-2' %>
          <%= link_to 'Destroy', book_path(book), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
